@font-face {
    font-family: 'FZJianZhi-M23S';
    src: 
        url('https://7769-wish-e872ae-1252926300.tcb.qcloud.la/fonts/jianzhi.ttf') format('woff'),
        url('https://7769-wish-e872ae-1252926300.tcb.qcloud.la/fonts/jianzhi.ttf?sign=edcef4d3dd0c8dfa18ee5faf53388f74&t=1549712766') format('truetype');
    font-weight: normal;
    font-style: normal;
}

button {
    background: transparent;
    border-radius: 0rpx;
	font-family: "微软雅黑";
    display: inline-block;
    margin: 2rpx 10rpx;
}

.header {
	position: absolute;
	width: 100%;
	height: 343rpx;
}

.header image {
	width: 100%;
	height: 100%;
}

.header .btn-back {
	position: absolute;
	top: 38rpx;
	left: 38rpx;
	width: 70rpx;
	height: 72rpx;
    outline: none;
	border: none;
    border-radius: 0px;
    background-image: url('https://7769-wish-e872ae-1252926300.tcb.qcloud.la/img/btn-back-default.png?sign=e2f7eda5f76122a2acdb67dd3c99b011&t=1549468381');
    background-size: 100% 100%;
    background-color: transparent;
    display: block;
}

.main {
	position: absolute;
	top: 343rpx;
	width: calc(100% - 75rpx);
	height: calc(100% - 402rpx);
	padding: 30rpx 38rpx;
}

.main .avatar {
    width: 120rpx;
    height: 120rpx;
    display: block;
    border-radius: 50%;
    border: 6rpx solid #fcf6e9;
}

.main .content {
    width: calc(100% - 140rpx);
    min-height: 130rpx;
    line-height: 60rpx;
	font-size: 48rpx;
	font-family: "FZJianZhi-M23S";
	color: #18285e;
    float: right;
    word-break: break-all;
    margin-top: -130rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.main .btn-group {
	height: 66rpx;
	margin-top: 60rpx;
	margin-bottom: 30rpx;
	border-top: 2rpx solid #dcdcdc;
	border-bottom: 2rpx solid #dcdcdc;
	padding: 15rpx;
	text-align: center;
	line-height: 66rpx;
    background-image: url('https://7769-wish-e872ae-1252926300.tcb.qcloud.la/img/btn-group-bg.png?sign=d15e47a5586b050c28dfae4674f283f1&t=1549543127');
	background-size: 100%;
	color: #c0d2e5;
    z-index: 10;
}

.main .btn-group button {
    font-size: 28rpx;
    border:none;
    outline: none;
    background: transparent;
}

.main .icon {
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    right: 40rpx;
    top: 172rpx;
}

.main .story {
	font-size: 24rpx;
	text-indent: 2em;
	color: #644;
	line-height: 38rpx;
	text-align: justify;
}

.main .story b {
	color: #9a12b7;
	padding: 0 4rpx;
}

.main .status {
	margin: 30rpx 0;
	padding: 15rpx;
	border-top: 2rpx solid #dcdcdc;
	border-bottom: 2rpx solid #dcdcdc;
	font-family: "FZJianZhi-M23S";
	font-size: 26rpx;
}

.main .status image {
	display: block;
    width: 30rpx;
    height: 30rpx;
}

.main .status view {
	display: block;
	margin-top: -30rpx;
	margin-left: 38rpx;
}

.main .status .power {
    margin-left: 0rpx;
	display: inline-block;
	color: #588cda;
}

.main .status .location {
    margin-top: 0rpx;
	float: right;
	color: #8e1e1e;
}

.main .log {
	font-size: 26rpx;
	width: 100%;
	padding: 15rpx 0;
    margin-top: 10rpx;
	margin-bottom: 30rpx;
	color: #777;
    padding-top: 20rpx;
}

.main .log .log-item {
    width: 100%;
	height: 38rpx;
	overflow: hidden;
    text-align: center;
    margin-bottom: 10rpx;
}

.main .log .log-item image {
    width: 32rpx;
    height: 32rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    border-radius: 4rpx;
}

.main .log .log-item .nickname {
	color: #3f9a18;
	padding-right: 11rpx;
    display: inline-block;
}

.main .log .log-item .power-add {
	color: #2c6dbd;
    display: inline-block;
}

.main .log .log-item .power-sub {
	color: #bd2c2c;
    display: inline-block;
}

.login {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.4);
    z-index: 999;
}

.login .login-box {
    position: absolute;
    bottom: 0rpx;
    height: 280rpx;
    width: 100%;
    background-color: #fffcee;
    box-shadow: -5rpx 0rpx 10rpx 3rpx;
}

.login .login-box view {
    margin-top: 50rpx;
    font-size: 34rpx;
    text-align: center;
}

.login .login-box button {
    margin-top: 40rpx;
    width: 250rpx;
}